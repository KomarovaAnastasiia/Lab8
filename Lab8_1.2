#include <iostream>
#include <cstring>

template <typename T>
void findMaxAndCount(const T array[], int size, T& maxVal, int& count) {
    if (size == 0)
        return;

    maxVal = array[0];
    count = 1;

    for (int i = 1; i < size; ++i) {
        if (array[i] > maxVal) {
            maxVal = array[i];
            count = 1;
        } else if (array[i] == maxVal) {
            count++;
        }
    }
}

// Специфікація для типу char*
template <>
void findMaxAndCount(const char* const array[], int size, const char*& maxVal, int& count) {
    if (size == 0)
        return;

    maxVal = array[0];
    count = 1;

    for (int i = 1; i < size; ++i) {
        if (strcmp(array[i], maxVal) > 0) {
            maxVal = array[i];
            count = 1;
        } else if (strcmp(array[i], maxVal) == 0) {
            count++;
        }
    }
}

int main() {
    int intArray[] = {1, 5, 3, 5, 7, 5, 9};
    int maxInt, countInt;
    findMaxAndCount(intArray, 7, maxInt, countInt);
    std::cout << "Максимальне ціле значення: " << maxInt << ", Кількість: " << countInt << std::endl;

    double doubleArray[] = {1.5, 2.5, 3.5, 2.5, 4.5, 2.5};
    double maxDouble;
    int countDouble;
    findMaxAndCount(doubleArray, 6, maxDouble, countDouble);
    std::cout << "Максимальне подвійне значення: " << maxDouble << ", Кількість: " << countDouble << std::endl;

    const char* strArray[] = {"apple", "banana", "apple", "orange", "apple"};
    const char* maxStr;
    int countStr;
    findMaxAndCount(strArray, 5, maxStr, countStr);
    std::cout << "Максимальне значення рядка: " << maxStr << ", Кількість: " << countStr << std::endl;

    return 0;
}
